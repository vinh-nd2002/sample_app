<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".app_name"), root_path(locale: I18n.locale), id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("static_pages.layouts.header.users.title"), "#" %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t t("static_pages.layouts.header.account.title")%> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("static_pages.layouts.header.account.drop_down.profile"), current_user %></li>
              <li><%= link_to t("static_pages.layouts.header.account.drop_down.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.layouts.header.account.drop_down.logout"), logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.layouts.header.sign_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
