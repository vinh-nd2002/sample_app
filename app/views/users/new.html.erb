<% provide(:title, t("sign_up.title")) %>
<h1><%= t "sign_up.title"%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label t "sign_up.form.name" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label t "sign_up.form.email" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t "sign_up.form.password" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label t "sign_up.form.password_confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("sign_up.form.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
