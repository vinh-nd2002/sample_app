<% provide(:title, t("login.title")) %>
<h1><%= t "login.title"%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
    <%= f.label t "login.form.email" %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label t "login.form.password" %>
    <%= link_to t("forgot_password.forgot"), new_password_reset_path %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span><%= t "login.remember_me"%></span>
    <% end %>
    <%= f.submit t("login.submit"), class: "btn btn-primary" %>
  <% end %>
  <p><%= t "login.sign_up.question"%> <%= link_to t("login.sign_up.link"), signup_path %></p>
 </div>
</div>
